<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <!-- Common style -->
    <style name="TextBase" parent="@style/TextAppearance.AppCompat.Headline">
        <item name="android:textColor">#444</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="TextNormalBold" parent="@style/TextBase">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextNormalWhite" parent="@style/TextBase">
        <item name="android:textColor">#fff</item>
    </style>

    <style name="TextBig" parent="@style/TextBase">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextBigBold" parent="@style/TextNormalBold">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextMoreInfo" parent="@style/TextAppearance.AppCompat.Headline">
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingTop">1dp</item>
        <item name="android:paddingRight">5dp</item>
    </style>

    <style name="TextNoData" parent="@style/TextBase">
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">#9b9a9a</item>
    </style>

    <style name="TextEditField" parent="@style/TextBase">
        <item name="android:background">@drawable/bg_edit_text</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>

    </style>


</resources>
