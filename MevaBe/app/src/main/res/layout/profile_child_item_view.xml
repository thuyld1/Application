<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/content_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_bottom_border"
                android:paddingBottom="14dp"
                android:paddingTop="14dp">

    <ImageView
        android:id="@+id/child_gender"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/content_space"
        android:background="@drawable/bg_rounded_corners"
        android:scaleType="centerCrop"
        android:src="@drawable/profile_gender_male"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/content_space"
        android:layout_marginRight="128dp"
        android:layout_toRightOf="@id/child_gender"
        android:orientation="vertical">


        <TextView
            android:id="@+id/child_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="middle"
            android:maxLines="2"
            android:text="Title Sample"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:textColor="#444"
            android:textSize="16dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/child_date_of_birth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="Description sample"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:textColor="#444"
            android:textSize="14dp"/>
        <TextView
            android:id="@+id/child_years_old"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description sample"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:textColor="#444"
            android:textSize="14dp"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/child_edit"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/content_space"
        android:scaleType="centerCrop"
        android:src="@drawable/profile_child_edit"/>

    <ImageView
        android:id="@+id/child_delete"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/child_edit"
        android:scaleType="centerCrop"
        android:src="@drawable/profile_child_delete"/>
</RelativeLayout>