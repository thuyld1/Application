<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/content_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_bottom_border"
                android:paddingBottom="12dp"
                android:paddingTop="10dp">

    <ImageView
        android:id="@+id/child_gender"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/content_space"
        android:layout_marginTop="3dp"
        android:background="@drawable/bg_rounded_corners"
        android:scaleType="centerCrop"
        android:src="@drawable/profile_gender_male"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/content_space"
        android:layout_marginRight="128dp"
        android:layout_toRightOf="@id/child_gender"
        android:orientation="vertical">


        <TextView
            android:id="@+id/child_name"
            style="@style/TextNormalBold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="middle"
            android:maxLines="2"
            android:text="Title Sample"/>

        <TextView
            android:id="@+id/child_date_of_birth"
            style="@style/TextBase"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="Description sample"/>

        <TextView
            android:id="@+id/child_years_old"
            style="@style/TextBase"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description sample"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/child_edit"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/content_space"
        android:scaleType="centerCrop"
        android:src="@drawable/profile_child_edit"/>

    <ImageView
        android:id="@+id/child_delete"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/child_edit"
        android:scaleType="centerCrop"
        android:src="@drawable/profile_child_delete"/>
</RelativeLayout>