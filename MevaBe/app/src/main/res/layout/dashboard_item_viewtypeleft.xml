<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/content_id"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/bg_bottom_border"
              android:orientation="horizontal"
              android:paddingBottom="14dp"
              android:paddingTop="14dp">

    <ImageView
        android:id="@+id/thumbnail"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="@dimen/content_space"
        android:scaleType="centerCrop"
        android:src="@drawable/common_placeholder"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/content_space"
        android:layout_marginRight="@dimen/content_space"
        android:orientation="vertical">


        <TextView
            android:id="@+id/title"
            style="@style/TextBigBold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:text="Title Sample"/>

        <TextView
            android:id="@+id/description"
            style="@style/TextBase"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="3"
            android:paddingTop="@dimen/content_space"
            android:text="Description sample"/>

    </LinearLayout>
</LinearLayout>